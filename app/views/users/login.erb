<h1>Login</h1>

<% if @errors.present? %>
  <div id="error_explanation">
    <div class="alert alert-danger">
      <h2><%= @errors %></h2>
    </div>
  </div>
<% end %>

<%= form_tag '/login' do %>

  <p>
    <%= label_tag :email %><br />
    <%= text_field_tag :email, params[:email] %>
  </p>
  <p>
    <%= label_tag "Password" %><br />
    <%= password_field_tag :password %>
  </p>
  <p class="submit-button">
    <%= submit_tag "Log in", class: "btn btn-primary" %>
  </p>

<% end %>
